<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs', { title: 'Productos' , stylesheets: [] }) %>

    <body>

        <%- include('../partials/header.ejs') %>

            <main class="catalogo">
                <div class="container">
                    <div class="row justify-content-center">
                        <% data.forEach(product=> { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 bg-light product-card">
                                    <a href="/products/<%= product.id %>" class="text-decoration-none text-dark">
                                        <img src="/images/products/<%= product.image %>" class="card-img-top img-fluid"
                                            alt="<%= product.name %>"
                                            style="height: 200px; width: 100%; object-fit: cover;">
                                        <div class="card-body">
                                            <h5 class="card-title fw-bold text-primary">
                                                <%= product.name %>
                                            </h5>
                                            <p class="card-text"><span class="fw-bold">Categor√≠a:</span>
                                                <%= product.Category.name %>
                                            </p>
                                            <p class="card-text"><span class="fw-bold">Marca:</span>
                                                <%= product.Brand.name %>
                                            </p>
                                            <p class="card-text"><span class="fw-bold">Precio:</span> $<%= product.price
                                                    %>
                                            </p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                </div>
            </main>

            <%- include('../partials/footer.ejs') %>

    </body>

</html>