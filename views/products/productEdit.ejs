<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs', {
    title: 'Editar producto',
    stylesheets: [
        '../../stylesheets/style.css',
        '../../stylesheets/layout.css',
        '../../stylesheets/productEdit.css'
        ]
    }) %>

<body>
    
    <%- include('../partials/header.ejs') %>

    <main>
        <form id="productForm" class="editarProducto" action="/products/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_method" value="PUT">
            <h1>Editar Producto</h1>

            <div>
                <label for="name">Nombre del Producto:</label>
                <input type="text" id="name" name="name" value="<%= product.name %>" autocomplete="off" autofocus placeholder="Introducir nombre de al menos 5 caracteres">
                <span id="nameError" class="error"></span>
            </div>

            <div>
                <label for="brand">Marca:</label>
                <select id="brand" name="brand">
                    <% if (brands && brands.length > 0) { %>
                        <% brands.forEach(brand => { %>
                            <option value="<%= brand.id %>" <%= product.Brand && product.Brand.id === brand.id ? 'selected' : '' %>>
                                <%= brand.name %>
                            </option>
                        <% }); %>
                    <% } else { %>
                        <option value="">No hay marcas disponibles</option>
                    <% } %>
                </select>                
            </div>

            <div>
                <label for="description">Descripción:</label>
                <textarea id="description" name="description" rows="4" placeholder="Introducir descripción de al menos 20 caracteres"><%= product.description %></textarea>
                <span id="descriptionError" class="error"></span>
            </div>
    

            <div>
                <label for="image">Imagen:</label>
                <input type="file" id="image" name="image" accept="image/*">
                <small>Imagen actual: <%= product.image %></small>
                <span id="imageError" class="error"></span>
            </div>

            <div>
                <label for="category">Categoría:</label>
                <select id="category" name="category">
                    <% if (categories && categories.length > 0) { %>
                        <% categories.forEach(category => { %>
                            <option value="<%= category.id %>" <%= product.Category && product.Category.id === category.id ? 'selected' : '' %>>
                                <%= category.name %>
                            </option>
                        <% }); %>
                    <% } else { %>
                        <option value="">No hay Categorias disponibles</option>
                    <% } %>
                </select>
            </div>

            <div>
                <label for="colors">Colores:</label>
                <select id="colors" name="colors" multiple>
                    <% if (colors && colors.length > 0) { %>
                        <% colors.forEach(color => { %>
                            <option value="<%= color.id %>" 
                                <%= product.Colors && product.Colors.some(prodColor => prodColor.id === color.id) ? 'selected' : '' %>>
                                <%= color.name %>
                            </option>
                        <% }); %>
                    <% } else { %>
                        <option value="">No hay Colores disponibles</option>
                    <% } %>
                </select>
                <small>Usa Ctrl (Cmd en Mac) para seleccionar múltiples opciones</small>
            </div>           
    
            <div>
                <label for="price">Precio:</label>
                <input type="number" id="price" name="price" step="0.01" min="0" value="<%= product.price %>">
            </div>
            <div>
                <label for="size">Tamaño:</label>
                <input type="input" id="size" name="size" value="<%= product.size %>">
            </div>
            <div>
                <label for="officialWeb">Descripción oficial (URL):</label>
                <input type="text" name="officialWeb" id="officialWeb" autocomplete="off" value="<%= product.officialWeb %>">
            </div>

            <button type="submit">Actualizar Producto</button>
        </form>
    </main>

    <%- include('../partials/footer.ejs') %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/validatorjs/2.0.0/validator.min.js"></script>
    <script src="/javascripts/productValidation.js"></script>

</body>
</html>
