<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs', {
    title: 'Editar Usuario',
    stylesheets: [
        '../stylesheets/style.css',
        '../stylesheets/layout.css',
        '../stylesheets/register.css'
        ]
    }) %>

<body>

    <%- include('../partials/header.ejs') %>

    <main>
        <section class="registro">
            <form action="/users/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="_method" value="PUT">
                <h2>Editar Usuario</h2>
                <div class="campo">
                    <label for="firstName">Nombre:</label>
                    <input type="text" id="firstName" name="firstName" autocomplete="off" value="<%= data.firstName %>" autofocus>
                </div>

                <div class="campo">
                    <label for="lastName">Apellido:</label>
                    <input type="text" id="lastName" name="lastName" autocomplete="off" value="<%= data.lastName %>">
                </div>

                <div class="campo">
                    <label for="email">Correo Electrónico:</label>
                    <input type="email" id="email" name="email" autocomplete="off" value="<%= data.email %>">
                </div>

                <div class="campo">
                    <label for="password">Contraseña:</label>
                    <input type="password" id="password" name="password" placeholder="Dejar vacío si no deseas cambiarla">
                </div>

                <div class="campo">
                    <label for="profileImage">Imagen de Perfil:</label>
                    <input type="file" id="profileImage" name="profileImage" accept="image/*">
                </div>

                <button type="submit">Editar</button>
            </form>
        </section>
    </main>

    <%- include('../partials/footer.ejs') %>

</body>
</html>
