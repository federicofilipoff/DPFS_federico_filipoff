<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs', {
    title: 'Editar Usuario',
    stylesheets: [
        '../stylesheets/style.css',
        '../stylesheets/layout.css',
        '../stylesheets/register.css'
        ]
    }) %>

<body>

    <%- include('../partials/header.ejs') %>

    <main>
        <section class="registro">
            <form id="userForm" action="/users/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data" data-action="edit">

                <input type="hidden" name="_method" value="PUT">
                <h2>Editar Usuario</h2>
                <div class="campo">
                    <label for="firstName">Nombre:</label>
                    <input type="text" id="firstName" name="firstName" autocomplete="off" value="<%= data.firstName %>" autofocus>
                    <span id="firstNameError" class="error"></span>
                </div>

                <div class="campo">
                    <label for="lastName">Apellido:</label>
                    <input type="text" id="lastName" name="lastName" autocomplete="off" value="<%= data.lastName %>">
                    <span id="lastNameError" class="error"></span>
                </div>

                <div class="campo">
                    <label for="email">Correo Electrónico:</label>
                    <input type="email" id="email" name="email" autocomplete="off" value="<%= data.email %>">
                    <span id="emailError" class="error"></span>
                </div>

                <div class="campo">
                    <label for="passwordEdit">Contraseña:</label>
                    <input type="password" id="passwordEdit" name="passwordEdit" placeholder="Nueva contraseña (opcional)">
                    <span id="passwordEditError" class="error"></span>
                </div>

                <div class="campo">
                    <label for="profileImage">Imagen de Perfil:</label>
                    <input type="file" id="profileImage" name="profileImage" accept="image/*">
                    <span id="profileImageError" class="error"></span>
                </div>

                <button type="submit">Editar</button>
            </form>
        </section>
    </main>

    <%- include('../partials/footer.ejs') %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/validatorjs/2.0.0/validator.min.js"></script>
    <script src="/javascripts/userValidation.js"></script>

</body>
</html>
