<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs', {
    title: 'Ingresar',
    stylesheets: [
        '../stylesheets/style.css',
        '../stylesheets/layout.css',
        '../stylesheets/login.css'
    ]
}) %>

<body>
    
    <%- include('../partials/header.ejs') %>

    <main>
        <section class="login">
            <form id="loginForm" action="/users/login" method="POST">
                <div class="campo">
                    <label for="email">Correo Electrónico:</label>
                    <input type="email" id="email" name="email" autocomplete="off" autofocus>
                    <span id="emailError" class="error"></span>
                </div>

                <div class="campo">
                    <label for="password">Contraseña:</label>
                    <input type="password" id="password" name="password">
                    <span id="passwordError" class="error"></span>
                </div>

                <div class="rememberMe">
                    <input type="checkbox" id="rememberMe" name="rememberMe">
                    <label for="rememberMe">Recordarme</label>
                </div>

                <button type="submit">Iniciar Sesión</button>
                <div class="registrarse">
                    ¿No tenés una cuenta?
                    <a href="/users/create">Regístrate</a>
                </div>
            </form>
        </section>
    </main>

    <%- include('../partials/footer.ejs') %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/validatorjs/2.0.0/validator.min.js"></script>
    <script src="/javascripts/authValidation.js"></script>

</body>
</html>
