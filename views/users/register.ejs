<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs', {
    title: 'Registrarse',
    stylesheets: [
        '../stylesheets/style.css',
        '../stylesheets/layout.css',
        '../stylesheets/register.css'
        ]
    }) %>

<body>

    <%- include('../partials/header.ejs') %>

    <main>
        <section class="registro">
            <form id="userForm" action="/users/" method="POST" enctype="multipart/form-data">
                <h2>Crear Usuario</h2>
                <div class="campo">
                    <label for="firstName">Nombre:</label>
                    <input type="text" id="firstName" name="firstName" autocomplete="off" autofocus>
                    <span id="firstNameError" class="error"></span>
                </div>
                
                <div class="campo">
                    <label for="lastName">Apellido:</label>
                    <input type="text" id="lastName" name="lastName" autocomplete="off">
                    <span id="lastNameError" class="error"></span>
                </div>
                
                <div class="campo">
                    <label for="email">Correo Electrónico:</label>
                    <input type="email" id="email" name="email" autocomplete="off">
                    <span id="emailError" class="error"></span>
                </div>

                <div class="campo">
                    <label for="password">Contraseña:</label>
                    <input type="password" id="password" name="password">
                    <span id="passwordError" class="error"></span>
                </div>

                <div class="campo">
                    <label for="category">Categoría:</label>
                    <select id="category" name="category" required>
                        <option value="user">Usuario</option>
                        <option value="admin">Administrador</option>
                    </select>
                </div>

                <div class="campo">
                    <label for="profileImage">Imagen de Perfil:</label>
                    <input type="file" id="profileImage" name="profileImage" accept="image/*">
                    <span id="profileImageError" class="error"></span>
                </div>

                <button type="submit">Registrarse</button>
                <a class="login" href="/users/login">Iniciar sesión</a>
            </form>
        </section>
    </main>

    <%- include('../partials/footer.ejs') %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/validatorjs/2.0.0/validator.min.js"></script>
    <script src="/javascripts/userValidation.js"></script>

</body>
</html>
